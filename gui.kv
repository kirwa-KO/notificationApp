ScreenManager:
	SlotsPage:
	SingInPage:

<SingInPage>:
	name: 'singin'
	login: login
	password: password
	MDTextField:
		id: login
		hint_text: "Enter your login"
		pos_hint: {"center_x": 0.5, "center_y": 0.6}
		size_hint_x: None
		width: 400
		helper_text: "or click forget password"
		helper_text_mode: "on_focus"
		icon_right: "shield-account"
		icon_right_color: app.theme_cls.primary_color
	MDTextField:
		id: password
		hint_text: "Enter your password"
		pos_hint: {"center_x": 0.5, "center_y": 0.5}
		size_hint_x: None
		width: 400
		icon_right: "key"
		password: True
		icon_right_color: app.theme_cls.primary_color
	MDRoundFlatButton:
		text: "Sing in"
		pos_hint: {"center_x": 0.5, "center_y": 0.4}
		on_release: root.click_sing_in_btn()

<SlotsPage>:
	name: 'slots'

	box: box
	ScreenManager:
		Screen:
			BoxLayout:
				orientation: "vertical"
				MDToolbar:
					title: "Reservation Slots"
					right_action_items: [["dots-vertical", lambda x: nav_drawer.set_state() ]]
					left_action_items: [["menu", lambda x: menu.set_state() ]]
					# right_action_items: [["dots-vertical", lambda x: root.click_there_btn(nav_drawer) ]]
					elevation: 10

				ScrollView:
					MDList:
						id: box

				MDBottomAppBar:
					MDToolbar:
						icon: 'logout'
						icon_color: 1, 1, 1, 1
						type: 'bottom'
						on_action_button: root.logout()

	MDNavigationDrawer:
		id: menu
		BoxLayout:
			orientation: 'vertical'
			spacing: '8dp'
			padding: '8dp'
			AsyncImage:
				source: 'http://we-hack-things.com/rsrcs/img/back_grnd_app.png'

			MDRoundFlatButton:
				text: "Send me notification Of"
				pos_hint: {'center_x': 0.5}
			ScrollView:
				MDList:
					OneLineIconListItem:
						text: 'Morning Slots'
						on_release: root.add_morning_notification()
						IconLeftWidget:
							icon: 'weather-sunny'
					OneLineIconListItem:
						text: 'Evening Slots'
						on_release: root.add_evening_notification()
						IconLeftWidget:
							icon: 'weather-cloudy'
					OneLineIconListItem:
						text: 'Night Slots'
						on_release: root.add_night_notification()
						IconLeftWidget:
							icon: 'weather-night'
	MDNavigationDrawer:
		id: nav_drawer
		BoxLayout:
			orientation: 'vertical'
			spacing: '8dp'
			padding: '8dp'
			AsyncImage:
				source: 'http://we-hack-things.com/rsrcs/img/1337.jpg'

			MDRoundFlatButton:
				# text: root.full_name if root.full_name != "" else "Your Name Will Show in Reopen App"
				text: "Update Cluster Data Evey"
				pos_hint: {'center_x': 0.5}
			ScrollView:
				MDList:
					OneLineIconListItem:
						text: '05  Seconds'
						on_release: root.oneLineListItemClicked_5_Second()
						IconLeftWidget:
							icon: 'clock'
					OneLineIconListItem:
						text: '30  Seconds'
						on_release: root.oneLineListItemClicked_30_Seconds()
						IconLeftWidget:
							icon: 'clock'
					OneLineIconListItem:
						text: '60 Seconds'
						on_release: root.oneLineListItemClicked_60_Seconds()
						IconLeftWidget:
							icon: 'clock'
					OneLineIconListItem:
						text: '05 minutes'
						on_release: root.oneLineListItemClicked_300_Seconds()
						IconLeftWidget:
							icon: 'clock'
					OneLineIconListItem:
						text: '10 minutes'
						on_release: root.oneLineListItemClicked_600_Seconds()
						IconLeftWidget:
							icon: 'clock'
					OneLineIconListItem:
						text: '30 minutes'
						on_release: root.oneLineListItemClicked_1800_Seconds()
						IconLeftWidget:
							icon: 'clock'
					OneLineIconListItem:
						text: '60 minutes'
						on_release: root.oneLineListItemClicked_3600_Seconds()
						IconLeftWidget:
							icon: 'clock'

